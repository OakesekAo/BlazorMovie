@page "/"
@using BlazorMovie.Models
@using BlazorMovie.Services
@inject TMDBClient TMDB

<PageTitle>Home</PageTitle>

<div class="h-100 d-flex flex-column justify-content-center align-items-center">

    <h1>Hello, world!</h1>

    Welcome to your new app.

    <img src="/icon-192.png" class="w-25" />
    <button class="btn btn-primary mt-3">Primary button</button>

    <div class="row row-cols-2 row-cols-lg-4 row-cols-xl-5 justify-content-center justify-content-md-start">
    @if(movies is not null)
    {
            @foreach(PopularMovie movie in movies.Results)
            {
                <div class="col">
                    <div class="">

                    </div>
                </div>

            }
        }
        else
        {
            for (int i = 0; i < 10; i++)
            {
                <div class="col">

                </div>
            }
        }
    </div>

</div>

@code {
    private PopularMoviePagedResponse? movies;

    protected override async Task OnInitializedAsync()
    {
        movies = await TMDB.GetPopularMoviesAsync();
    }

}